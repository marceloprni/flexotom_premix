<%- include ('../partials/header.ejs'); -%>
    <%- include ('../partials/navbar.ejs'); -%>

<main class="container_main">
    <section class="container_section_first">
        <div class="group_seleciona_materia">
            <div class="form-group group_input_parametros">
              <label for="">ORDEM PREMIX</label>
              <select class="form-control selectPrima" id="materiaPrima"></select>
            </div>

            <button class="btn_criar" id="btnCriarLote">GERAR LOTES</button>
        </div>
    </section>

    <section class="group_selectiona_btn">
            <button class="btn_tabela" id="btn_gerarTabela">GERAR TABELA</button>
            <button class="btn_tabela" id="btn_imprimir">IMPRIMIR LOTE</button>
    </section>

    <section class="container_section_second">
         <div class="container_table">
            <table class="table text-black tabela_Cadastro" id="tabela-CadastroLote"></table>
        </div>
    </section>
</main>

<div class="modal fade justify-content-center align-items-center align-self-center" id="barCodeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" id="messageDiv" role="document">
        <div class="modal-content" id="barCodeDiv">
            <div class="modal-body justify-content-center align-items-center align-self-center text-center" id="barCodeBody">
                <p id="mensagemBarcode"></p>
                <img id="idBarcode"></img>
                <button type="button" class="btn btn-dark" id="btn_imprimir_barcode">IMPRIMIR</button>
            </div>
        </div>
    </div>
</div>


